@model WebTotNghiep.Models.KhachHang
@{
    ViewBag.Title = "Register";

}
@{
    if (ViewBag.ms != null)
    {
        <div class="alert alert-warning" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign">
                @ViewBag.ms
            </span>

        </div>
    }
}


<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="~/Content/jquery-1.11.3.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <link href="~/Content/CSS/signin.css" rel="stylesheet" />
    <style>
        .margin1 {
            margin-left: 230px;
        }
        .margin {
            margin-top: 300px;
        }

        .input {
            margin-left: 200px;
        }
    </style>
</head>
<body class="margin">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <div>
            <form class="modal-content animate">
                <div class="container">
                    <h1>Sign Up</h1>
                    <p>Please fill in this form to create an account.</p>
                    <hr>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="input" for="uname"><b>Username</b></div>
                    @Html.EditorFor(model => model.Tentruynhap)
                    <br />
                    <div class="margin1">@Html.ValidationMessageFor(model => model.Tentruynhap, "", new { @class = "text-danger" })</div>

                    <div class="input"><b>Password</b></div>
                    @Html.EditorFor(model => model.Matkhau)
                    <br />
                    <div class="margin1">@Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })</div>

                    <div class="input"><b>Name Customer</b></div>
                    @Html.EditorFor(model => model.Tenkhachhang)
                    <br />
                    <div class="margin1">@Html.ValidationMessageFor(model => model.Tenkhachhang, "", new { @class = "text-danger" })</div>

                    <div class="input"><b>Address</b></div>
                    @Html.EditorFor(model => model.Diachi)
                    <br />
                    <div class="margin1">@Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger" })</div>

                    <div class="input"><b>Phone</b></div>
                    @Html.EditorFor(model => model.Dienthoai)
                    <br />
                    <div class="margin1">@Html.ValidationMessageFor(model => model.Dienthoai, "", new { @class = "text-danger" })</div>

                    <div class="input"><b>Email</b></div>
                    @Html.EditorFor(model => model.Email)
                    <br />
                    <div class="margin1">@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</div>

                    <div class="w3-panel margin1" style="width:60%">
                        <button class="w3-btn w3-block">
                            <input type="submit" value="Sign Up" class="w3-btn w3-block">
                            <a > @Html.ActionLink("Cancel", "Index", "Home")</a>
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <script>
            // Get the modal
            var modal = document.getElementById('id01');
            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        </script>
    }
</body>
</html>
